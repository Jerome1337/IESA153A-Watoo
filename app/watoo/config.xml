<?xml version='1.0' encoding='utf-8'?>
<widget id="com.app.watoo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Watoo</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <platform name="ios">
        <!-- images are determined by width and height. The following are supported -->
        <splash src="www/img/Default-568h@2x~iphone.png" width="640" height="1136"/>
    </platform>
    <platform name="android">
        <splash src="www/img/Default-568h@2x~iphone.png" density="land-hdpi"/>
	    <splash src="www/img/Default-568h@2x~iphone.png" density="land-ldpi"/>
	    <splash src="www/img/Default-568h@2x~iphone.png" density="land-mdpi"/>
	    <splash src="www/img/Default-568h@2x~iphone.png" density="land-xhdpi"/>
    </platform>
    <content src="index.html" />
    <access origin="*" />
</widget>
